# Font
font-family = Iosevka Nerd Font
font-size = 16

# Theme
theme = GruvboxDark
# custom-shader = ./galaxy.glsl
# custom-shader-animation = true
# Cursor
cursor-invert-fg-bg

# Mouse
mouse-hide-while-typing

# Window
window-padding-x = 5
window-padding-y = 5
window-padding-balance = true
window-decoration = false

# Keybindings
keybind = ctrl+comma=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size
keybind = ctrl+alt+shift+d=new_split:right
keybind = ctrl+alt+shift+h=goto_split:left
keybind = ctrl+alt+shift+j=goto_split:down
keybind = ctrl+alt+shift+k=goto_split:up
keybind = ctrl+alt+shift+l=goto_split:right
keybind = ctrl+alt+shift+]=next_tab
keybind = ctrl+alt+shift+[=previous_tab
